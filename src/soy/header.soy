/**
 * Template for header component.
 *
 * @author jmwaura@google.com (Jesse Mwaura)
 */

{namespace vit.templates}

/**
 * Draw header component.
 */
{template .header autoescape="contextual"}
  <div class="{css header}">
    <div class="{css header-title}">
      <span class="{css header-logo} {css logo-sprite}"></span>
      <span class="{css header-text}">
        {msg desc="Official title for the Google Voter Information Tool"}
          Google Voter Information Tool
        {/msg}
      </span>
    </div>
    <div class="{css header-tools}">
      <div class="{css header-tool-set}">
        {call .sharing /}
      </div>
      <div class="{css header-tool-set}">
        <span class="{css header-tool-button} {css print-tool-button} {css placeholder}"></span>
        <span class="{css header-tool-button} {css link-tool-button} {css placeholder}"></span>
        <span class="{css header-tool-button} {css embed-tool-button} {css placeholder}"></span>
      </div>
    </div>
  </div>
{/template}
